<div class='col-md-8 offset-md-1'>
  <h2><%= @search_target %> search for "<%= @keyword %>"</h2>
  <table class='table'>
    <% if @search_target == 'Users' %>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @results.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
            <td><%= user.name %></td>
            <td>フォロー数：<%= user.followings.count %></td>
            <td>フォロワー数：<%= user.followers.count %></td>
            <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <thead>
        <tr>
          <th>title</th>
          <th>opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @results.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>
</div>
